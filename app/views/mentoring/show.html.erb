<section>
	<div class="contaioner">
		<div class="wrapper_section2 margin_plus2">
			<h2 class="text_center">  </h2>
			<div class="panel panel-default">
				<div class="panel-body">
					<table class="table table-bordered">
                        	<thead>
						      <tr>
						      	<th>id</th>
						      	<th>list id</th>
						      	<th>user_id</th>
						        <th>mentor_id</th>
						        <th>area</th>
						        <th>detail complete</th>
						        <th>index complete</th>
						        <th>auction price</th>
						      </tr>
						    </thead>
						    <tbody>
						    	<% @index.each do |p|%>
							    	<tr>
							    		<td><%=p.id%></td>
							    		<td><%=p.list_id%></td>
							    		<td><%=p.user_id%></td>
			                        	<td><%=p.mentor_id%></td>
			                        	<% @detail.each do |d|%>
			                        	<% if d.id==p.list_id%>
			                        		<td><%=d.mentor_area%></td>
			                        		<td><%=d.complete%></td>
		                        		<%end%>
		                        		<%end%>
			                        	<td><%=p.complete%></td>
			                        	<td><%=p.auction_price%> </td>
		                    		</tr>
		                		<%end%>
					    	</tbody>
						</table>
						
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>user id</th>
									<th>mentor id</th>>
								</tr>
							</thead>
							<tbody>
								<%@mentor.each do |m|%>
								<tr>
									<td><%=m.user_id%></td>
									<td><%=m.id%></td>
								</tr>
								<%end%>
							</tbody>
						</table>
				</div>
			</div>
	
		</div>
	</div>
</section>